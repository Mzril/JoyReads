<!DOCTYPE html>
<html>
  <head>
    <title>JoyReads</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <script type="text/javascript">
      window.sloganURL = "<%= image_url('slogan.png') %>"
    </script>
    <% if logged_in? %>
      <script type="text/javascript">
        window.payload = <%= render(
          "api/users/user.json.jbuilder",
          user: current_user
        ).html_safe %>
      </script>
    <% end %>
    <%= yield %>
  </body>
</html>
